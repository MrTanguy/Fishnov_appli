<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.fishnov.ui.pages.login.LoginViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ABBBCC"
        android:orientation="vertical"
        tools:context=".ui.pages.login.LoginActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="Login"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorLink="#12507C"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="215dp"
                android:layout_height="20dp"
                android:layout_marginStart="98dp"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="98dp"
                android:background="@drawable/border_textview"
                android:gravity="center_horizontal"
                android:hint="Email"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="116dp"
                android:layout_height="20dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="145dp"
                android:background="@drawable/border_textview"
                android:gravity="center_horizontal"
                android:hint="Password"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="161dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="161dp"
                android:text="Login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>