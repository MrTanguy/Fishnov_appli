<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.example.fishnov.ui.pages.register.RegisterViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ABBBCC"
        tools:context=".ui.pages.register.RegisterActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:text="Register"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorLink="#12507C"
                android:textSize="45sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/editTextFirstname"
                android:layout_width="116dp"
                android:layout_height="20dp"
                android:layout_marginTop="78dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:hint="Firstname"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/editTextLastname"
                android:layout_width="116dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:hint="Lastname"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextFirstname" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="215dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:hint="Email"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.535"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextLastname" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="116dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:hint="Password"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="116dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:hint="Confirm Password"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />

            <EditText
                android:id="@+id/editTextTrawlerRegistration"
                android:layout_width="116dp"
                android:layout_height="20dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal"
                android:hint="Trawler registration"
                android:textAlignment="center"
                android:textColor="#12507C"
                android:textColorHint="#12507C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPassword" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Register"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTrawlerRegistration" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>
